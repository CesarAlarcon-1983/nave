      //-     ul.coproductor-page__details-procesos
      //-       each proceso in data.procesos
      //-         li.coproductor-page__details-proceso=proceso

    .coproductor-page__otros-coproductores
      +banner('otros coproductores', '', '#fff')
      .coproductor-page__otros-coproductores__container
        each coproductor, index in coproductores
          if index < 4
            .coproductor-page__otros-coproductores__wrapper(data-target=coproductor.nombre)
              +coproductor-module(coproductor, 'tacto')
